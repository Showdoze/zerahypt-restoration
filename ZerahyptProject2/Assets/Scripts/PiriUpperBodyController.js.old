						GetComponent.<Animation>().Play("PiriPullGunSRifle");
						break;
					case ItemEnum.Shakar_17:
						GetComponent.<Animation>().Play("PiriPullGunSRifle");
						break;
					case ItemEnum.Tothler_Tygria_M2:
						GetComponent.<Animation>().Play("PiriPullGunSRifle");
						break;
					case ItemEnum.AROT_Iter_1:
						GetComponent.<Animation>().Play("PiriPullGunSRifle");
						break;
